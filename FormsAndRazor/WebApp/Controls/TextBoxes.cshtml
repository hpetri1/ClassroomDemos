@{
    Page.Title = "Text Boxes";
    Layout = "~/_LayoutPage.cshtml";

    //the syntax is typically C#
    //access to an input control will be by the name parameter
    // on the control
    //Since we are using C#, that means things are case-sensitive
    //To reference the control use the object Request and the property reference
    //    .Form["xxx"] where xxx is the value of the name parameter 
    //data that is coming from the form is of datatype string
    //place your incoming data into a variable for access by this page

    var controlvariablename = Request.Form["controlname"];
    var whichbutton = Request.Form["formbutton"];
}

@section banner
{
    <h1>Text Boxes</h1>
}


    <div>
        <!-- one can use the postback flag to determine your logic
    The first time the page is referenced, the value of the flag is FALSE
    If you remane on this page, the value of the flag will be TRUE-->
        @if (IsPost)
        {

            if (string.IsNullOrEmpty(controlvariablename))
            {
                <p>You did not entered any values!!!</p>
            }

            else
            {
                if (whichbutton.Equals("Data"))
                {
                    <!-- to access a local variable within your html text, you will place the "at" symbol (shift 2) in front of the variable name-->
                    <p>You entered &gt; @controlvariablename &lt;</p>
                }
                else
                {
                    <p>You entered &gt; @controlvariablename &lt; which has a length of @controlvariablename.Length</p>
                }
            }

        }




        <form id="theForm" action="" method="post">
            <label for="controlname">Field Label:</label>&nbsp;&nbsp;
            <input type="text" id="controlname" name="controlname" value="@controlvariablename" placeholder="Enter your name:" /><br />
            <button type="submit" id="formbutton" name="formbutton" class="btn btn-primary" value="Data">Show Data</button>
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="Length">Show Data Length</button>

        </form>
    </div>